{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "webmaesther/laravel-project-starter",
    "type": "project",
    "description": "My Laravel Starter Kit",
    "keywords": [
        "php",
        "laravel"
    ],
    "license": "MIT",
    "version": "1.0.0",
    "require": {
        "php": "^8.4",
        "ext-redis": "*",
        "ext-swoole": "*",
        "filament/filament": "^4.0",
        "inertiajs/inertia-laravel": "^2.0",
        "laravel/cashier": "^15.7",
        "laravel/folio": "^1.1",
        "laravel/fortify": "^1.27",
        "laravel/framework": "^12.19",
        "laravel/horizon": "^5.33",
        "laravel/nightwatch": "^1.7",
        "laravel/octane": "^2.10",
        "laravel/pennant": "^1.17",
        "laravel/pulse": "^1.4",
        "laravel/reverb": "^1.5",
        "laravel/sanctum": "^4.1",
        "laravel/scout": "^10.15",
        "laravel/socialite": "^5.21",
        "laravel/tinker": "^2.10.1",
        "laravel/wayfinder": "^0.1.6",
        "typesense/typesense-php": "^5.1"
    },
    "require-dev": {
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pcntl": "*",
        "ext-posix": "*",
        "ext-xdebug": "*",
        "ext-zip": "*",
        "lib-pcre": ">=7.0",
        "barryvdh/laravel-debugbar": "^3.15",
        "driftingly/rector-laravel": "^2.0",
        "fakerphp/faker": "^1.24",
        "larastan/larastan": "^3.4",
        "laravel/envoy": "^2.10",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.22",
        "laravel/sail": "^1.43",
        "laravel/telescope": "^5.9",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.8",
        "peckphp/peck": "^0.1.3",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.2",
        "pestphp/pest-plugin-livewire": "^3.0",
        "pestphp/pest-plugin-watch": "^3.0",
        "rector/rector": "^2.0",
        "soloterm/solo": "^0.5.0"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../*",
            "options": {
                "symlink": false
            }
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi",
            "npm ci && npm run build",
            "npx husky init",
            "git init && git add . && git commit -m \"Install Starter Kit\""
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "@php artisan solo"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "peck",
            "rector --dry-run",
            "pint --test",
            "phpstan",
            "pest --parallel --coverage --min=100",
            "pest --mutate --covered-only --parallel --min=100"
        ],
        "pest:fast": [
            "pest --parallel"
        ],
        "pest:coverage": [
            "pest --parallel --coverage --min=100"
        ],
        "pest:mutate": [
            "pest --mutate --covered-only --parallel --min=100"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/telescope"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "beta",
    "prefer-stable": true
}
