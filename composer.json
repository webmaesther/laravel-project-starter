{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "webmaesther/laravel-project-starter",
    "type": "project",
    "description": "My Laravel Starter Kit",
    "keywords": ["php", "laravel"],
    "license": "MIT",
    "version": "1.0.0",
    "require": {
        "php": "^8.4",
        "inertiajs/inertia-laravel": "^2.0",
        "laravel/cashier": "^15.6",
        "laravel/framework": "^12.0",
        "laravel/horizon": "^5.32",
        "laravel/octane": "^2.9",
        "laravel/pennant": "^1.17",
        "laravel/pulse": "^1.4",
        "laravel/reverb": "^1.0",
        "laravel/sanctum": "^4.0",
        "laravel/scout": "^10.15",
        "laravel/telescope": "^5.9",
        "laravel/tinker": "^2.10.1",
        "tightenco/ziggy": "^2.5",
        "typesense/typesense-php": "^5.1"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.15",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.0",
        "laravel/dusk": "^8.3",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.43",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.2",
        "rector/rector": "^2.0",
        "soloterm/solo": "^0.5.0"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../lib/*",
            "options": {
                "symlink": false
            }
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi",
            "npm ci && npm run build",
            "npx husky init",
            "git init && git add . && git commit -m \"Install Starter Kit\""
        ],
        "dev": [
            "@php artisan solo"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "pint --test",
            "phpstan",
            "pest --parallel --coverage --min=100",
            "pest --mutate --covered-only --parallel"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "process-timeout": 0,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
